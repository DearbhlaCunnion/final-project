---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | My Portfolio">
  <!-- Introductory Section -->
  <section style="text-align: center; padding: 2rem;">
    <h2 style="font-size: 2rem; color: #023d65; margin-bottom: 1rem;">Get In Touch</h2>
    <p style="font-size: 1.1rem; max-width: 600px; margin: 0 auto;">
      You can contact me via email or linkedIn - else you can always send me a message via the form below !
    </p>
  </section>

  <!-- Contact Information with Icons -->
  <section style="display: flex; justify-content: center; gap: 3rem; padding: 2rem; background-color: #f5f5f5; border-radius: 8px;">
    <div style="text-align: center;">
      <a href="mailto:dcunnion99@gmail.com" style="color: inherit; text-decoration: none;">
        <img src="/final-project/email-icon.svg" alt="Email" style="width: 40px; margin-bottom: 0.5rem;" />
        <p>Email</p>
        <p style="color: #023d65;">dcunnion99@gmail.com</p>
      </a>
    </div>
    <div style="text-align: center;">
      <a href="https://www.linkedin.com/in/dearbhla-cunnion-4010271a3/" target="_blank" style="color: inherit; text-decoration: none;">
        <img src="/final-project/linkedin-icon.png" alt="LinkedIn" style="width: 40px; margin-bottom: 0.5rem;" />
        <p>LinkedIn</p>
        <p style="color: #023d65;">@DearbhlaCunnion</p>
      </a>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section style="padding: 2rem; max-width: 600px; margin: 2rem auto; border-radius: 8px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
    <h3 style="font-size: 1.5rem; color: #023d65; margin-bottom: 1rem;">Send a Message</h3>
    <form action="https://formspree.io/f/your-form-id" method="POST" style="display: flex; flex-direction: column; gap: 1rem;">
      <label>
        Name
        <input type="text" name="name" required style="width: 100%; padding: 0.5rem; border-radius: 5px; border: 1px solid #ddd;" />
      </label>
      <label>
        Email
        <input type="email" name="email" required style="width: 100%; padding: 0.5rem; border-radius: 5px; border: 1px solid #ddd;" />
      </label>
      <label>
        Message
        <textarea name="message" required style="width: 100%; padding: 0.5rem; border-radius: 5px; border: 1px solid #ddd; height: 100px;"></textarea>
      </label>
      <button type="submit" style="padding: 0.5rem 1rem; background-color: #023d65; color: white; border: none; border-radius: 5px; cursor: pointer;">
        Send
      </button>
    </form>
  </section>

  <section style="text-align: center; margin-top: 2rem;">
    <p style="font-size: 1.2rem;">Looking forward to connecting with you!</p>
  </section>
</Layout>
