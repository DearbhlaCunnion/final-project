---
const { title = "My Portfolio" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="/src/styles/global.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha384-dyB6lqGT8FBq6Hj65/MUVu6l/BfujQ9rCZ/QBaD6hVuCm3L80N6z2z5eJTTcz8cf" crossorigin="anonymous">
  </head>
  <body>
    <div id="layout-wrapper">
      <header style="background-color: #023d65; padding: 1rem; color: #fff;">
        <nav class="container" style="display: flex; gap: 1rem;">
          <a href="/" style="color: white;">Home</a>
          <a href="/about" style="color: white;">About</a>
          <a href="/projects" style="color: white;">Projects</a>
          <a href="/contact" style="color: white;">Contact</a>
        </nav>
      </header>

      <main id="main-content" class="container">
        <slot /> <!-- Page content will be injected here -->
      </main>

      <footer style="background-color: #333; color: #fff; padding: 1rem; text-align: center;">
        <p>&copy; {new Date().getFullYear()} Dearbhla Cunnion. All rights reserved.</p>
      </footer>
    </div>
  </body>
</html>
